@model MaterialModel

@{
    ViewData["Title"] = $"Xóa vật tư (#{Model.Id}) {Model.Name}";
}

<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h2>@ViewData["Title"].</h2>
    </div>
    <div class="modal-body">
        <div class="text-danger">Bạn có chắc muốn xóa vật tư '@Model.Name' (#@Model.Id) với nội dung: </div>

        <form id="form" class="form-horizontal form-readonly">
            <input asp-for="Id" hidden />
            <div class="form-group">
                <label asp-for="Name" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    @Model.Name
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Code" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    @Model.Code
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    @Model.Description
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Unit" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    @Model.Unit
                </div>
            </div>
            <div class="form-group">
                <label asp-for="UnitPrice" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    @Model.UnitPrice
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Active" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    @(Model.Active ? "Đang hoạt động" : "Ngừng hoạt động")
                </div>
            </div>
        </form>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-danger js-save-btn @(Model.Id == 0 ? "disabled" : string.Empty)"
                mc-modal-post-url="/Material/Delete/">
            <i class="glyphicon glyphicon-trash"></i>
            Xóa
        </button>
        <button type="button" class="btn btn-default" data-dismiss="modal">
            <i class="glyphicon glyphicon-remove"></i>
            Hủy
        </button>
    </div>
</div>
