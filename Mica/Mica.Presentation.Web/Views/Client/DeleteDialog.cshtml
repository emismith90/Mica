@model ClientModel

@{
    ViewData["Title"] = $"Xóa khách hàng (#{Model.Id}) {Model.Name}";
}

<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h2>@ViewData["Title"].</h2>
    </div>
    <div class="modal-body">
        <div class="text-danger">Bạn có chắc muốn xóa khách hàng '@Model.Name' (#@Model.Id) với nội dung: </div>

        <form id="form" class="form-horizontal form-readonly">
            <input asp-for="Id" hidden />
            <div class="form-group">
                <label asp-for="Name" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    @Model.Name
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Birthday" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    @Model.Birthday
                </div>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    @Model.PhoneNumber
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    @Model.Email
                </div>
            </div>
            <div class="form-group">
                <label asp-for="SkypeId" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    @Model.SkypeId
                </div>
            </div>
            <div class="form-group">
                <label asp-for="YahooId" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    @Model.YahooId
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    @Model.Address
                </div>
            </div>

            <hr />
            <div class="form-group">
                <label asp-for="Company" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    @Model.Company
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Position" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    @Model.Position
                </div>
            </div>
            <div class="form-group">
                <label asp-for="CompanyPhone" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    @Model.CompanyPhone
                </div>
            </div>
            <div class="form-group">
                <label asp-for="CompanyAddress" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    @Model.CompanyAddress
                </div>
            </div>

            <hr />
            <div class="form-group">
                <label asp-for="Note" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    @Model.Note
                </div>
            </div>
        </form>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-danger js-save-btn @(Model.Id == 0 ? "disabled" : string.Empty)"
                mc-modal-post-url="/Client/Delete/">
            <i class="glyphicon glyphicon-trash"></i>
            Xóa
        </button>
        <button type="button" class="btn btn-default" data-dismiss="modal">
            <i class="glyphicon glyphicon-remove"></i>
            Hủy
        </button>
    </div>
</div>
