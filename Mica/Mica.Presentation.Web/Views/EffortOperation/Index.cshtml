@model IPagedList<EffortOperationModel>
@{
    ViewData["Title"] = "Danh sách lệnh tạo công";
    var linkToThisController = "/EffortOperation";
}

<div class="row">
    <ol class="breadcrumb">
        <li><a asp-controller="Home" asp-action="Index"><svg class="glyph stroked home"><use xlink:href="#stroked-home"></use></svg></a></li>
        <li class="active">@ViewData["Title"]</li>
    </ol>
</div><!--/.row-->

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">@ViewData["Title"].</h1>
    </div>
</div><!--/.row-->

<div class="row">
    <div class="col-lg-12">
        @Html.Partial("SmartPager", Model, new ViewDataDictionary(ViewData)
        {
            { "mc-sl-to", linkToThisController }
        })
    </div>
</div><!--/.row-->

<div class="row">
    <div class="col-lg-12">
        @Html.Partial("TableSearchBox", new ViewDataDictionary(ViewData)
        {
            { "asp-controller", "EffortOperation" },
            {"searchPlaceholderName", "Tìm theo loại công, tên lệnh, hoặc ghi chú" }
        })

        <table class="table table-striped table-hover effort-operation-detail">
            <tbody>
                @if (Model != null && Model.Any())
                {
                    var dummyDetail = Model.FirstOrDefault();

                    <tr>
                        <th>@Html.RenderTableHeaderAnchor(linkToThisController, "Id", Html.DisplayNameFor(m => dummyDetail.Id))</th>
                        <th>@Html.DisplayNameFor(m => dummyDetail.EffortName)</th>
                        <th>@Html.DisplayNameFor(m => dummyDetail.TicketName)</th>
                        <th>@Html.RenderTableHeaderAnchor(linkToThisController, "Quantity", Html.DisplayNameFor(m => dummyDetail.Quantity))</th>
                        <th>@Html.RenderTableHeaderAnchor(linkToThisController, "Note", Html.DisplayNameFor(m => dummyDetail.Note))</th>
                        <th>@Html.RenderTableHeaderAnchor(linkToThisController, "OperationDate", Html.DisplayNameFor(m => dummyDetail.OperationDate))</th>
                        <th></th>
                    </tr>

                    @for (var index = 0; index < Model.Count; index++)
                    {
                        <tr>
                            <td>@Model[index].Id</td>
                            <td>@Model[index].EffortName</td>
                            <td>@Model[index].TicketName</td>
                            <td>@Model[index].Quantity</td>
                            <td>@Model[index].Note</td>
                            <td>@Model[index].OperationDate</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div><!--/.row-->
