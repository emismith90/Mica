// Configure bundling and minification for the project.
// More info at https://go.microsoft.com/fwlink/?LinkId=808241
[
  {
    "outputFileName": "wwwroot/css/site.min.css",
    // An array of relative input file paths. Globbing patterns supported
    "inputFiles": [
      "wwwroot/css/styles.css",
      "wwwroot/css/site.css",
      "wwwroot/css/control.css",
      "wwwroot/css/form.css",
      "wwwroot/css/modal.css",
      "wwwroot/css/table.css",
      "wwwroot/css/inventory/*.css",
      "wwwroot/css/effort/*.css",
      "wwwroot/css/client/*.css",
      "wwwroot/css/ticket/*.css"
    ]
  },
  {
    "outputFileName": "wwwroot/js/site.min.js",
    "inputFiles": [
      "wwwroot/js/lumino.glyphs.js",
      "wwwroot/js/jquery.plugins/*.js",
      "wwwroot/js/site.js",
      "wwwroot/js/utils/*.js",
      "wwwroot/js/common/*.js",

      "wwwroot/js/shared/*.js",

      "wwwroot/js/ticket/mica.ticket._init.js",
      "wwwroot/js/ticket/mica.ticket.create-ticket.effort-op.js",
      "wwwroot/js/ticket/mica.ticket.create-ticket.inventory-op.js",
      "wwwroot/js/ticket/mica.ticket.create-ticket.form.js",
      "wwwroot/js/ticket/mica.ticket.addedit.js",
      "wwwroot/js/ticket/*.js",

      "wwwroot/js/onpageload.js"
    ],
    // Optionally specify minification options
    "minify": {
      "enabled": false,
      "renameLocals": false
    },
    // Optionally generate .map file
    "sourceMap": true
  }
]
